<form method="GET">
  <input name="q" <%= @q %> >
  <button type="submit"> Buscar</button>
</form>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Nombre</th>
      <th>Price</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag(product.photo, style: 'width:300px')  %></td>
        <td><%= product.nombre %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= product.category %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) if can? :edit, product %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, product%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @products %>
<%= link_to 'New Product', new_product_path %>
